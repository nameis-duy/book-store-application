<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.book.BookDetailActivity"
    android:orientation="vertical">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:id="@+id/imgDetail"
        android:layout_marginTop="20dp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:id="@+id/tvBookTitle"
            android:text="Title"
            android:textSize="25sp"
            android:textColor="@color/blue"
            android:layout_marginLeft="20dp"
            android:layout_alignParentStart="true"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvPrice"
            android:text="$3.99"
            android:textSize="25sp"
            android:textColor="@color/blue"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"/>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/blue"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="20dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvDateOfPublication"
        android:text="Publication Date: 20/8/2002"
        android:textSize="20sp"
        android:textColor="#68696E"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvAuthor"
        android:text="Author: Stan Lee"
        android:textSize="20sp"
        android:textColor="#68696E"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvGenre"
        android:text="Genre: Super Hero"
        android:textSize="20sp"
        android:textColor="#68696E"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/blue"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="20dp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnAddToCart"
            android:text="Add to cart"
            android:textAllCaps="false"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:background="@color/blue"
            android:padding="10dp"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="20dp"/>

        <EditText
            android:layout_width="75dp"
            android:layout_height="wrap_content"
            android:id="@+id/etQuantity"
            android:text="1"
            android:inputType="numberDecimal"
            android:textSize="20sp"
            android:textColor="@color/blue"
            android:textAlignment="center"
            android:layout_toLeftOf="@id/btnAddToCart"
            android:layout_marginRight="30dp"
            android:background="@drawable/custom_layout_border"/>

    </RelativeLayout>

</LinearLayout>